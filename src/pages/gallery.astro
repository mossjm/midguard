---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import apparel from '../../assets/images/original/apparel.jpg';
import heroBg from '../../assets/images/original/hero-bg.jpg';
---

<BaseLayout title="Gallery">

  <!-- ════════════════════════════════════════════════════════════════════
       PAGE HERO
       ════════════════════════════════════════════════════════════════════ -->
  <section class="bg-charcoal-900 bg-gradient-to-b from-charcoal-900 to-charcoal-950 py-20 md:py-28">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <span class="inline-block text-gold-accent text-sm font-bold uppercase tracking-widest mb-4">
        See Us in Action
      </span>
      <h1 class="text-4xl md:text-6xl font-heading font-bold text-white uppercase tracking-wider mb-6">
        GALLERY
      </h1>
      <p class="text-gray-400 text-lg md:text-xl max-w-2xl mx-auto leading-relaxed">
        Warriors on the mat. Champions in the making.
      </p>
    </div>
  </section>

  <!-- ════════════════════════════════════════════════════════════════════
       GALLERY GRID
       ════════════════════════════════════════════════════════════════════ -->
  <section class="bg-charcoal-950 py-20 md:py-28">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

      <!-- Section Heading -->
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-heading font-bold text-white uppercase tracking-wider mb-4">
          Life at Midguard
        </h2>
        <div class="w-20 h-1 bg-red-accent mx-auto"></div>
      </div>

      <!-- Masonry-like Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6 gallery-grid">

        <!-- Image 1 — Hero/Training (large, spans 2 columns on lg) -->
        <div class="sm:col-span-2 lg:col-span-2 lg:row-span-2">
          <Image
            src={heroBg}
            alt="Training at Midguard BJJ and Kickboxing"
            class="rounded-xl w-full h-full object-cover"
            width={800}
            height={600}
          />
        </div>

        <!-- Image 2 — Apparel -->
        <div>
          <Image
            src={apparel}
            alt="Midguard BJJ and Kickboxing apparel and gear"
            class="rounded-xl w-full h-full object-cover"
            width={800}
            height={600}
          />
        </div>

        <!-- Placeholder 1 -->
        <div class="bg-charcoal-800 border border-white/10 rounded-xl flex flex-col items-center justify-center p-8 min-h-[200px]">
