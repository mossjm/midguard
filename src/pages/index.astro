---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import heroBg from '../../assets/images/original/hero-bg.jpg';
import logoIcon from '../../assets/images/logos/logo-icon-dark.png';
---

<BaseLayout title="Home">

  <!-- ════════════════════════════════════════════════════════════════════
       HERO SECTION — Full viewport, cinematic
       ════════════════════════════════════════════════════════════════════ -->
  <section class="relative h-screen -mt-20 flex items-center justify-center overflow-hidden">
    <!-- Background image -->
    <Image
      src={heroBg}
      alt="Midguard Academy training floor"
      class="absolute inset-0 w-full h-full object-cover"
      widths={[640, 1024, 1536, 2048]}
      sizes="100vw"
      quality={80}
      loading="eager"
    />

    <!-- Dark gradient overlay -->
    <div class="absolute inset-0 bg-gradient-to-b from-charcoal-950/70 via-charcoal-950/50 to-charcoal-950"></div>

    <!-- Hero content -->
    <div class="relative z-10 text-center px-4 max-w-4xl mx-auto">
      <p class="text-gold-accent font-heading text-sm md:text-base uppercase tracking-[0.25em] mb-6 animate-on-scroll">
        Wisconsin&rsquo;s Premier Martial Arts Academy
      </p>

      <h1 class="text-5xl md:text-7xl lg:text-8xl font-heading font-bold uppercase tracking-wider leading-none mb-6 text-white animate-on-scroll">
        FORGE YOUR<br />WARRIOR SPIRIT
      </h1>

      <p class="text-lg md:text-xl text-gray-300 font-body mb-10 tracking-wide animate-on-scroll">
        Kickboxing. Jiu-Jitsu. Discipline. Community.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center animate-on-scroll">
        <a
          href="/contact"
          class="inline-block bg-red-accent hover:bg-red-hover text-white font-heading text-lg uppercase tracking-wider font-bold px-10 py-4 rounded transition-colors duration-300"
        >
          Start Your Free Trial
        </a>
        <a
          href="/programs"
          class="inline-block border-2 border-white/80 hover:border-white text-white font-heading text-lg uppercase tracking-wider font-bold px-10 py-4 rounded transition-colors duration-300 hover:bg-white/10"
        >
          View Programs
        </a>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-10 flex flex-col items-center gap-2">
      <span class="text-xs uppercase tracking-widest text-gray-400 font-body">Scroll</span>
      <svg
        class="w-6 h-6 text-gray-400 scroll-bounce"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        viewBox="0 0 24 24"
      >
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
      </svg>
    </div>
  </section>

  <!-- ════════════════════════════════════════════════════════════════════
       VALUE PROPS SECTION
       ════════════════════════════════════════════════════════════════════ -->
  <section class="bg-charcoal-900 py-20 md:py-28 px-4">
    <div class="max-w-6xl mx-auto">
      <!-- Section heading -->
      <div class="text-center mb-16 animate-on-scroll">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-heading font-bold uppercase tracking-wider text-white mb-4">
          Why Choose Midguard Academy
        </h2>
        <div class="w-20 h-1 bg-red-accent mx-auto"></div>
      </div>

      <!-- Cards grid -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">

        <!-- Card 1: Expert Instruction -->
        <div class="bg-charcoal-800 border border-white/10 hover:border-red-accent/50 rounded-lg p-8 transition duration-300 animate-on-scroll">
          <!-- Shield / Sword icon -->
          <div class="mb-6">
            <svg class="w-12 h-12 text-red-accent" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 2s8 2 8 8c0 5.25-3.5 9.5-8 12-4.5-2.5-8-6.75-8-12 0-6 8-8 8-8z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v5m0 0l-2-2m2 2l2-2" />
            </svg>
          </div>
          <h3 class="text-xl font-heading font-bold uppercase tracking-wider text-white mb-4">Expert Instruction</h3>
          <p class="text-gray-400 font-body leading-relaxed">
            Our instructors are highly trained and experienced in Sport Karate, Kickboxing, and Jiu-Jitsu and are dedicated to helping you achieve your goals. Whether you are a beginner or an experienced fighter, we will work with you to improve your technique and get the most out of your training.
          </p>
        </div>

        <!-- Card 2: Train with Champions -->
        <div class="bg-charcoal-800 border border-white/10 hover:border-red-accent/50 rounded-lg p-8 transition duration-300 animate-on-scroll">
          <!-- Trophy icon -->
          <div class="mb-6">
            <svg class="w-12 h-12 text-red-accent" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8 21h8m-4-4v4m-4.5-8h9A2.5 2.5 0 0019 10.5V6h1.5a1 1 0 001-1V4a1 1 0 00-1-1H18V2a1 1 0 00-1-1H7a1 1 0 00-1 1v1H3.5a1 1 0 00-1 1v1a1 1 0 001 1H5v4.5A2.5 2.5 0 007.5 13z" />
            </svg>
          </div>
          <h3 class="text-xl font-heading font-bold uppercase tracking-wider text-white mb-4">Train with Champions</h3>
          <p class="text-gray-400 font-body leading-relaxed">
            Train alongside state and national champions at Midguard Academy. Elevate your skills in an environment that fosters growth, determination, and greatness. Join us to experience the transformative power of learning from the best and becoming your best.
          </p>
        </div>

        <!-- Card 3: Be Part of a Team -->
        <div class="bg-charcoal-800 border border-white/10 hover:border-red-accent/50 rounded-lg p-8 transition duration-300 animate-on-scroll">
          <!-- Users / Team icon -->
          <div class="mb-6">
            <svg class="w-12 h-12 text-red-accent" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 003.741-.479 3 3 0 00-4.682-2.72m.94 3.198l.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0112 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 016 18.719m12 0a5.971 5.971 0 00-.941-3.197m0 0A5.995 5.995 0 0012 12.75a5.995 5.995 0 00-5.058 2.772m0 0a3 3 0 00-4.681 2.72 8.986 8.986 0 003.74.477m.94-3.197a5.971 5.971 0 00-.94 3.197M15 6.75a3 3 0 11-6 0 3 3 0 016 0zm6 3a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0zm-13.5 0a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-heading font-bold uppercase tracking-wider text-white mb-4">Be Part of a Team</h3>
          <p class="text-gray-400 font-body leading-relaxed">
            Beyond a team, we&rsquo;re a family at Midguard Academy. Together, we forge bonds that strengthen on and off the mat. Join us to experience the camaraderie, support, and shared journey that make our academy more than just a place to train &mdash; it&rsquo;s where lifelong connections are made.
          </p>
        </div>

      </div>
    </div>
  </section>

  <!-- ════════════════════════════════════════════════════════════════════
       PROGRAMS OVERVIEW SECTION
       ════════════════════════════════════════════════════════════════════ -->
  <section class="bg-charcoal-950 py-20 md:py-28 px-4">
    <div class="max-w-6xl mx-auto">
      <!-- Section heading -->
      <div class="text-center mb-16 animate-on-scroll">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-heading font-bold uppercase tracking-wider text-white mb-4">
          Our Programs
        </h2>
        <div class="w-20 h-1 bg-red-accent mx-auto"></div>
      </div>

      <!-- Programs grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">

        <!-- Kickboxing -->
        <div class="bg-charcoal-900 border-l-4 border-red-accent rounded-lg p-8 animate-on-scroll">
          <h3 class="text-xl md:text-2xl font-heading font-bold uppercase tracking-wider text-white mb-3">Kickboxing</h3>
          <p class="text-gray-400 font-body leading-relaxed">
            Build striking power, speed, and conditioning with expert-led kickboxing classes.
          </p>
        </div>

        <!-- Brazilian Jiu-Jitsu -->
        <div class="bg-charcoal-900 border-l-4 border-red-accent rounded-lg p-8 animate-on-scroll">
          <h3 class="text-xl md:text-2xl font-heading font-bold uppercase tracking-wider text-white mb-3">Brazilian Jiu-Jitsu</h3>
          <p class="text-gray-400 font-body leading-relaxed">
            Master ground fighting, submissions, and self-defense with world-class instruction.
          </p>
        </div>

        <!-- Kids Jiu-Jitsu -->
        <div class="bg-charcoal-900 border-l-4 border-red-accent rounded-lg p-8 animate-on-scroll">
          <h3 class="text-xl md:text-2xl font-heading font-bold uppercase tracking-wider text-white mb-3">Kids Jiu-Jitsu</h3>
          <p class="text-gray-400 font-body leading-relaxed">
            Ages 5+. Build confidence, discipline, and coordination in a safe, fun environment.
          </p>
        </div>

        <!-- Ninja Kids -->
        <div class="bg-charcoal-900 border-l-4 border-red-accent rounded-lg p-8 animate-on-scroll">
          <h3 class="text-xl md:text-2xl font-heading font-bold uppercase tracking-wider text-white mb-3">Ninja Kids</h3>
          <p class="text-gray-400 font-body leading-relaxed">
            High-energy program building confidence through playful movements and gymnastics-inspired skills.
          </p>
        </div>

      </div>

      <!-- Explore link -->
      <div class="text-center animate-on-scroll">
        <a
          href="/programs"
          class="inline-flex items-center gap-2 text-red-accent hover:text-red-hover font-heading text-lg uppercase tracking-wider font-bold transition-colors duration-300"
        >
          Explore All Programs
          <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- ════════════════════════════════════════════════════════════════════
       CTA BANNER — Conversion-focused
       ════════════════════════════════════════════════════════════════════ -->
  <section class="bg-gradient-to-r from-red-dark via-red-accent to-red-dark py-16 md:py-24 px-4">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-heading font-bold uppercase tracking-wider text-white mb-4 animate-on-scroll">
        Ready to Begin Your Journey?
      </h2>
      <p class="text-lg md:text-xl text-white/90 font-body mb-10 animate-on-scroll">
        Stop in and inquire about a free trial. No experience necessary.
      </p>
      <div class="animate-on-scroll">
        <a
          href="/contact"
          class="inline-block bg-white hover:bg-gray-100 text-charcoal-950 font-heading text-lg uppercase tracking-wider font-bold px-12 py-4 rounded transition-colors duration-300 shadow-lg hover:shadow-xl"
        >
          Claim Your Free Trial
        </a>
      </div>
    </div>
  </section>

</BaseLayout>

<!-- ════════════════════════════════════════════════════════════════════════
     STYLES — Scroll bounce animation
     ════════════════════════════════════════════════════════════════════════ -->
<style>
  @keyframes scroll-bounce {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(8px);
    }
  }

  .scroll-bounce {
    animation: scroll-bounce 2s ease-in-out infinite;
  }

  /* Scroll animation base state */
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(1rem);
    transition: opacity 0.7s ease-out, transform 0.7s ease-out;
  }

  .animate-on-scroll.is-visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<!-- ════════════════════════════════════════════════════════════════════════
     SCRIPT — IntersectionObserver for scroll animations
     ════════════════════════════════════════════════════════════════════════ -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const elements = document.querySelectorAll('.animate-on-scroll');

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
            observer.unobserve(entry.target);
          }
        });
      },
      {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px',
      }
    );

    elements.forEach((el) => observer.observe(el));
  });
</script>
