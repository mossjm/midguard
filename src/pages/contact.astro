---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import apparel from '../../assets/images/original/apparel.jpg';
---

<BaseLayout title="Contact">

  <!-- ════════════════════════════════════════════════════════════════════
       PAGE HERO
       ════════════════════════════════════════════════════════════════════ -->
  <section class="bg-charcoal-900 bg-gradient-to-b from-charcoal-900 to-charcoal-950 py-20 md:py-28">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <span class="inline-block text-gold-accent text-sm font-bold uppercase tracking-widest mb-4">
        Get in Touch
      </span>
      <h1 class="text-4xl md:text-6xl font-heading font-bold text-white uppercase tracking-wider mb-6">
        CONTACT US
      </h1>
      <p class="text-gray-400 text-lg md:text-xl max-w-2xl mx-auto leading-relaxed">
        Stop in and inquire about a free trial. We&rsquo;d love to meet you.
      </p>
    </div>
  </section>

  <!-- ════════════════════════════════════════════════════════════════════
       CONTACT CONTENT — Form + Info Cards
       ════════════════════════════════════════════════════════════════════ -->
  <section class="bg-charcoal-950 py-20 md:py-28">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">

        <!-- Left Column — Contact Form -->
        <div>
          <h2 class="text-2xl md:text-3xl font-heading font-bold text-white uppercase tracking-wider mb-8">
            Send Us a Message
          </h2>

          <form class="space-y-6" action="#" method="POST">

            <!-- Name -->
            <div>
              <label for="name" class="block text-sm font-medium text-gray-300 mb-2 uppercase tracking-wider">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full bg-charcoal-800 border border-white/10 rounded px-4 py-3 text-white placeholder-gray-500 focus:border-red-accent focus:outline-none transition-colors duration-200"
                placeholder="Your full name"
              />
            </div>

            <!-- Email -->
            <div>
              <label for="email" class="block text-sm font-medium text-gray-300 mb-2 uppercase tracking-wider">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full bg-charcoal-800 border border-white/10 rounded px-4 py-3 text-white placeholder-gray-500 focus:border-red-accent focus:outline-none transition-colors duration-200"
                placeholder="your@email.com"
              />
            </div>

            <!-- Phone -->
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-300 mb-2 uppercase tracking-wider">Phone</label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full bg-charcoal-800 border border-white/10 rounded px-4 py-3 text-white placeholder-gray-500 focus:border-red-accent focus:outline-none transition-colors duration-200"
                placeholder="(555) 123-4567"
              />
            </div>

            <!-- Interest -->
            <div>
              <label for="interest" class="block text-sm font-medium text-gray-300 mb-2 uppercase tracking-wider">I&rsquo;m interested in...</label>
              <select
                id="interest"
                name="interest"
                class="w-full bg-charcoal-800 border border-white/10 rounded px-4 py-3 text-white focus:border-red-accent focus:outline-none transition-colors duration-200"
              >
                <option value="" class="text-gray-500">Select an option</option>
                <option value="kickboxing">Kickboxing</option>
                <option value="bjj">Brazilian Jiu-Jitsu</option>
                <option value="kids">Kids Programs</option>
                <option value="trial">Free Trial</option>
                <option value="other">Other</option>
              </select>
            </div>

            <!-- Message -->
            <div>
              <label for="message" class="block text-sm font-medium text-gray-300 mb-2 uppercase tracking-wider">Message</label>
              <textarea
                id="message"
                name="message"
                rows="4"
                class="w-full bg-charcoal-800 border border-white/10 rounded px-4 py-3 text-white placeholder-gray-500 focus:border-red-accent focus:outline-none transition-colors duration-200 resize-vertical"
                placeholder="Tell us about your goals or ask us anything..."
              ></textarea>
            </div>

            <!-- Submit -->
            <button
              type="submit"
              class="w-full bg-red-accent hover:bg-red-hover text-white font-heading text-lg uppercase tracking-wider font-bold px-8 py-4 rounded transition-colors duration-300"
            >
              Send Message
            </button>

          </form>

          <p class="text-gray-500 text-sm mt-6">
            Or just stop by during open hours &mdash; no appointment needed!
          </p>
        </div>

        <!-- Right Column — Info Cards -->
        <div class="space-y-6">

          <!-- Hours Card -->
          <div class="bg-charcoal-900 rounded-xl p-8">
            <div class="flex items-center gap-3 mb-6">
              <svg class="w-6 h-6 text-red-accent" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <h3 class="text-xl font-heading font-bold text-white uppercase tracking-wider">Academy Hours</h3>
            </div>
            <div class="space-y-3">
              <div class="flex items-center justify-between border-b border-white/10 pb-3">
                <span class="text-gray-300">Mon &ndash; Fri</span>
                <span class="text-white font-semibold">5:00 PM &ndash; 7:30 PM</span>
              </div>
              <div class="flex items-center justify-between border-b border-white/10 pb-3">
                <span class="text-gray-300">Saturday</span>
                <span class="text-white font-semibold">9:00 AM &ndash; 11:00 AM</span>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-gray-300">Sunday</span>
                <span class="text-red-accent font-semibold">Closed</span>
              </div>
            </div>
          </div>

          <!-- Free Trial Card -->
          <div class="bg-red-accent/10 border border-red-accent/30 rounded-xl p-8">
            <div class="flex items-center gap-3 mb-4">
              <svg class="w-6 h-6 text-red-accent" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
              </svg>
              <h3 class="text-xl font-heading font-bold text-white uppercase tracking-wider">FREE TRIAL</h3>
            </div>
            <p class="text-gray-300 leading-relaxed">
              New to martial arts? Start with a free trial class. No experience necessary, no commitment required. Just show up ready to work.
            </p>
          </div>

          <!-- What to Bring Card -->
          <div class="bg-charcoal-900 rounded-xl p-8">
            <div class="flex items-center gap-3 mb-6">
              <svg class="w-6 h-6 text-red-accent" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <h3 class="text-xl font-heading font-bold text-white uppercase tracking-wider">What to Bring</h3>
            </div>
            <ul class="space-y-3">
              <li class="flex items-center gap-3">
                <svg class="w-5 h-5 text-red-accent flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-300">Comfortable workout clothes</span>
              </li>
              <li class="flex items-center gap-3">
                <svg class="w-5 h-5 text-red-accent flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-300">Water bottle</span>
              </li>
              <li class="flex items-center gap-3">
                <svg class="w-5 h-5 text-red-accent flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-300">Positive attitude</span>
              </li>
              <li class="flex items-center gap-3">
                <svg class="w-5 h-5 text-gold-accent flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                </svg>
                <span class="text-gold-accent font-medium">We provide all training equipment</span>
              </li>
            </ul>
          </div>

        </div>
      </div>
    </div>
  </section>

  <!-- ════════════════════════════════════════════════════════════════════
       APPAREL SECTION
       ════════════════════════════════════════════════════════════════════ -->
  <section class="bg-charcoal-900 py-20 md:py-28">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <Image
        src={apparel}
        alt="Midguard BJJ and Kickboxing official apparel"
        class="rounded-xl w-full max-h-96 object-cover mb-10"
        width={1200}
        height={400}
      />
      <h2 class="text-3xl md:text-4xl font-heading font-bold text-white uppercase tracking-wider mb-4">
        MIDGUARD APPAREL
      </h2>
      <p class="text-gray-400 text-lg md:text-xl max-w-2xl mx-auto leading-relaxed">
        Rep Midguard BJJ and Kickboxing with our official gear. Ask about apparel during your visit.
      </p>
    </div>
  </section>

</BaseLayout>
